<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFont"
    tools:context="br.edu.ifpb.ajudemais.LoginActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorFont">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/componentesLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFont"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/edtsenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtnomeusuario"
                android:backgroundTint="@color/colorPrimary"
                android:hint="@string/hitSenhaUsuario"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary" />

            <EditText
                android:id="@+id/edtnomeusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imglogin"
                android:layout_marginTop="45dp"
                android:backgroundTint="@color/colorPrimary"
                android:hint="@string/hitNomeUsuario"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/imglogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_login" />

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtsenha"
                android:layout_marginTop="12dp"
                android:height="@dimen/LagHeigth"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/nomeBtnEntrar"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/fontLogin" />


            <Button
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/separadorEntraEFacebook"
                android:layout_marginTop="2dp"
                android:height="@dimen/LagHeigth"
                android:backgroundTint="@color/btnFaceTemp"
                android:text="FACEBOOK"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/fontLogin" />

            <TextView
                android:id="@+id/separadorEntraEFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnEntrar"
                android:layout_marginTop="2dp"
                android:text="Ou"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/esqueceuSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnFacebook"
                android:layout_marginTop="15dp"
                android:text="@string/opEsqueceuSenha"
                android:textAlignment="center" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/componenteBtnCriarConta"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorFont"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCriarConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:height="@dimen/LagHeigth"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/btnCriarCobta"
            android:textColor="@color/colorFont"
            android:textSize="@dimen/fontLogin" />

    </RelativeLayout>

</RelativeLayout>

