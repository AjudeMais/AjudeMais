<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fotoPerfilUsuario"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="@string/descPerfilImg"
        android:src="@drawable/ic_conta"
        app:civ_border_color="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tvEmailUsuarioPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNomeUsuarioPerfil"
        android:layout_toEndOf="@+id/fotoPerfilUsuario"
        android:text="@string/emailUsuario"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/tvNomeUsuarioPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/fotoPerfilUsuario"
        android:paddingTop="19dp"
        android:text="@string/usuario"
        android:textAlignment="viewStart"
        android:textSize="18sp" />


</RelativeLayout>