<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFont">


    <ImageView
        android:id="@+id/imgNoConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/no_connection"
        android:src="@drawable/img_no_connection" />

    <TextView
        android:id="@+id/tv_no_connection_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgNoConnection"
        android:text="@string/empty_list"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_no_connection_text_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_connection_text"
        android:text="@string/no_connect_sec"
        android:textAlignment="center"
        android:textSize="16sp" />

</RelativeLayout>

