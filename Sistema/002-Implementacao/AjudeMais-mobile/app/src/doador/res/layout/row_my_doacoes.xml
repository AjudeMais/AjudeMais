<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_main_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/cardDoacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imagem_donativo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription=""
            android:src="@drawable/img_no_image"
            card_view:ignore="ContentDescription,ObsoleteLayoutParam" />

        <LinearLayout
            android:id="@+id/componentText"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_donative_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camisa Teste"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textSecond"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:ignore="HardcodedText,InefficientWeight,RtlHardcoded,RtlSymmetry" />


            <LinearLayout
                android:id="@+id/componentText2"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_instituicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="ONG AJUDE MAIS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/textSecond"
                    android:textSize="14sp"
                    card_view:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/componentEstado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            card_view:ignore="RtlHardcoded">

            <LinearLayout
                android:id="@+id/componentLbEstado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:orientation="vertical"
                card_view:ignore="UselessParent">

                <TextView
                    android:id="@+id/tv_donative_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/screen_border"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:text="Disponibilizado"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/textSecond"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    card_view:ignore="HardcodedText,InefficientWeight,RtlHardcoded,RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>